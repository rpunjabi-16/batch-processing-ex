	</http:request-config>
	<flow name="until-succesfulFlow" doc:id="da216d95-f958-4ce7-a99d-7f0f86797f97" >
		<http:listener doc:name="Listener" doc:id="d97fcecd-a19d-493d-8248-4a836cebffc1" config-ref="HTTP_Listener_config" path="/untilSuccessful"/>
		<until-successful maxRetries="5" doc:name="Until Successful" doc:id="f819b522-cec5-4eb1-84c5-32d37658e208" millisBetweenRetries="10000">
			<flow-ref doc:name="Flow Reference" doc:id="c2ddf3c9-3dd6-415f-bd84-577ae1ca7ef0" name="until-succesfulFlow1"/>
		</until-successful>
	</flow>
